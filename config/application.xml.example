    <!-- Encryption Configuration -->
    <encryption>
        <!-- Master password for config encryption -->
        <!-- Priority: 1. Environment Variable, 2. This config, 3. Default -->
        <!-- Set enabled="false" to use environment variable only (RECOMMENDED) -->
        <masterPassword enabled="false" status="plaintext"></masterPassword>
        <!-- <masterPassword enabled="true" status="plaintext">your-master-password-here</masterPassword> -->
        <!-- WARNING: Storing master password in config is less secure than environment variable -->
        
        <!-- API Request/Response Encryption (AES-256-GCM) -->
        <!-- For encrypting API communications between frontend and backend -->
        <apiEncryption>
            <!-- Enable/disable API encryption -->
            <enabled>false</enabled>
            
            <!-- Encryption key (Base64-encoded AES-256 key) -->
            <!-- Priority: 1. Environment Variable (JANUSCOPE_ENCRYPTION_KEY), 2. This config -->
            <!-- Generate with: openssl rand -base64 32 -->
            <!-- IMPORTANT: Use same key on frontend and backend -->
            <key status="plaintext"></key>
            <!-- <key status="plaintext">your-base64-encryption-key-here</key> -->
            
            <!-- Encryption mode: whitelist, blacklist, or all -->
            <mode>whitelist</mode>
            
            <!-- Endpoints to encrypt (when mode=whitelist) -->
            <whitelist>
                <endpoint>/api/v1/auth/login</endpoint>
                <endpoint>/api/v1/auth/register</endpoint>
                <endpoint>/api/v1/auth/change-password</endpoint>
                <endpoint>/api/v1/users/profile</endpoint>
            </whitelist>
            
            <!-- Endpoints to exclude (when mode=blacklist or all) -->
            <blacklist>
                <endpoint>/api/health</endpoint>
                <endpoint>/api/v1/health</endpoint>
                <endpoint>/api/v1/metrics</endpoint>
            </blacklist>
        </apiEncryption>
    </encryption>
    
    <!-- Email Template Configuration -->
    <emailTemplates>
